{
  "name": "FindColor",
  "description": "A chrome extension to pick & copy CSS color from any webpage",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "options_page": "option.html",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/icons/picker_16.png",
    "32": "/icons/picker_32.png",
    "48": "/icons/picker_48.png"
  }
}
